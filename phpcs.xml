<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for the Online Store project</description>
    <rule ref="PSR2"/>
    <file>app/</file>
    <file>config/</file>
    <file>database/</file>
    <file>routes/</file>
    <file>app/http/Controllers/</file>
    <exclude-pattern>*/migrations/*</exclude-pattern>
</ruleset>
